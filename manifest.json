{
    "manifest_version": 2,
    "name": "Awin",
    "version": "1.0",
  
    "description": "Awin Extension",
     "icons":{
        "48": "Icon/awin-icona.png"
     },
    "permissions": [
        "activeTab",
        "tabs",
        "webRequest",
        "downloads",
        "cookies",
        
        "webRequestBlocking",
        "<all_urls>"
      ],
      "background": {
        "scripts": ["background.js"]
      },
      "browser_action": {
        "default_icon": "Icon/awin-icona.png",
        "default_title": "Awin Extension",
        "default_popup": "popup/tab.html"
      },
      "content_scripts": [
        {
          "matches": ["*://*/*"],
          "js": ["DWIN.js"]
        }
      ] 
  }

